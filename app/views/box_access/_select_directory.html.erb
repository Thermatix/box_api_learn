<h2> Select Folder </h2>
<p> Please select a folder you would like to save to, click on the folder name to go into the folder. </p>
<div class='directory'>
	<section class='scroll'>
		<% @box.get_folder(id_value).each do |folder| %>
			<div class='spacer'>
				<%= link_to folder['name'], select_folder_path(folder['id']) , class: 'button' %> 
				<%= radio_button_tag 'select_folder', folder['id'] %>
			</div>
		<% end %>
	</section>
</div>
<%= link_to 'Back', :back , class: 'button'  %>

