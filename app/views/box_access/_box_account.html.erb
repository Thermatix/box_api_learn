


<h2>Please write some text to save to your box account</h2>
<%= render 'flash' %>
	<%= form_tag(save_file_path, method: :post) do %>
		<%= render 'select_directory', id_value: params[:folder_id] %>
		<p> <%= label_tag 'text to save:' %> </p>
		<p> <%= text_area_tag 'content', nil, row: 4, class: 'text' %> </p>
		<p> <%= label_tag 'text_file name' %> <%= text_field_tag 'filename' %> </p>
		<p> <%= submit_tag 'save file', class: 'button' %></p>
	<% end %>

